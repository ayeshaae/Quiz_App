<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".questions">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="hello ( )"
        android:textAlignment="center" />

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:text="1.  Google Inc. was founded in ____ ?"
                android:textSize="19sp" />

            <RadioGroup
                android:id="@+id/rdQuestion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a)    1996" />

                <RadioButton
                    android:id="@+id/q1_Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b)    1998" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c)    2000" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d)    1989" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="2.  Which search operator does Google enable by default?"
                android:textSize="19sp" />


            <RadioGroup
                android:id="@+id/rdQuestion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/q2_Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a)    The AND operator" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b)    The OR operator" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c)    The NOT operator" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d)    Google Operator" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="3.  Google Inc. was founded by ______ ?"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="78dp"
                android:layout_height="136dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:src="@drawable/creator" />

            <CheckBox
                android:id="@+id/q3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="a)    Sergey Page" />

            <CheckBox
                android:id="@+id/q3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="b)    Eric Schmidt" />

            <CheckBox
                android:id="@+id/q3c_Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="c)    Sergey Brin" />

            <CheckBox
                android:id="@+id/q3d_Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="b)    Larry Page" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="4.  What color do the First letter of the Google logo have ?  "
                android:textSize="19sp" />

            <ImageView
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:src="@drawable/google" />

            <EditText
                android:id="@+id/q4_Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:hint="Enter your answer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="5.  What's the name of Google's new browser?"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="103dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:src="@drawable/chrome" />

            <EditText
                android:id="@+id/q5_Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:hint="Enter your answer" />


            <Button
                android:id="@+id/hint"
                style="@style/buttonstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:onClick="hint"
                android:text="Hint"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnSubmit"
                style="@style/buttonstyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="22dp"
                android:onClick="result"
                android:text="Submit"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reset"
                style="@style/buttonstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="22dp"
                android:onClick="reset"
                android:text="Reset"
                android:textAlignment="center"
                android:textStyle="bold|italic" />


        </LinearLayout>


    </ScrollView>
</LinearLayout>